#пишу окно для игры "Сапёр" по итогам полученной инфы из второго блока курса "Степик"
import tkinter as tk #импортирую ткинтер
window = tk.Tk()
ROW = 5 #столбцы и колонки
COLUMNS = 7

buttons = [] #ввожу кнопки с помощью двухмерного списка, так как поле представляет собой таблицу
for i in range(ROW):
    temp = [] #сильный и независимый временный список

    for j in range(COLUMNS):
        btn = tk.Button(window, width=3, font='Calibri 16 bold') #создаю кнопки
        temp.append(btn)
    buttons.append(temp)

for row_btn in buttons: #размещаю кнопки в окне
    print(row_btn)

for i in range(ROW):
    for j in range(COLUMNS):
        btn = buttons[i][j]
        btn.grid(row=i, column=j)

window.mainloop()
